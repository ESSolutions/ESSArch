# Names of nodes to start
#   most will only start one node:
CELERYD_NODES="workeretp workeretpvalidation workeretpfileoperation"

# Absolute or relative path to the 'celery' command:
CELERY_BIN="/ESSArch/pd/python/bin/celery"

# App instance to use
CELERY_APP="config"

# Where to chdir at start.
CELERYD_CHDIR="/ESSArch/pd/python/lib/python3.6/site-packages/ESSArch_TP"
#CELERYD_CHDIR="/ESSArch/alpha/ESSArch_Tools_Producer/ESSArch_TP"

# Extra command-line arguments to the worker
CELERYD_OPTS="-Q:workeretp celery -c:workeretp 4 -Q:workeretpvalidation validation -c:workeretpvalidation 4 -Q:workeretpfileoperation file_operation -c:workeretpfileoperation 4 --broker=amqp://guest:guest@localhost:5672/etp -Ofair"

# %N will be replaced with the first part of the nodename.
CELERYD_LOG_LEVEL=INFO
CELERYD_LOG_FILE="/ESSArch/log/celery_%N.log"
CELERYD_PID_FILE="/ESSArch/log/proc/celery_%N.pid"

# Workers should run as an unprivileged user.
CELERYD_USER="arch"
CELERYD_GROUP="arch"

# CELERYBEAT configuration
CELERYBEAT_LOG_LEVEL=INFO
CELERYBEAT_LOG_FILE="/ESSArch/log/celerybeat_etp.log"
CELERYBEAT_PID_FILE="/ESSArch/log/proc/celerybeat_etp.pid"
CELERYBEAT_USER=${CELERYD_USER}
CELERYBEAT_GROUP=${CELERYD_GROUP}
CELERYBEAT_CHDIR=${CELERYD_CHDIR}