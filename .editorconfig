# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 119

# Use 2 spaces for frontend files
[*.html, *.js, *.scss]
indent_size = 2

[ESSArch_Core/docs/**.rst]
max_line_length = 79
